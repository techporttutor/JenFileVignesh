pipeline {
  agent any
  tools {
    maven 'mymaven' 
  }
  stages {
    stage ('Build') {
      steps {
        sh 'mvn clean package'
      }
    }
    stage ('Deploy') {
      steps {
        script {
          deploy adapters: [tomcat8(credentialsId: 'ansadmin', path: '', url: 'http://34.229.167.159:8080')], contextPath: '/pipeline', onFailure: false, war: '/home/ansadmin/tomcat/webapps/*.war' 
        }
      }
    }
  }
}

pipeline {
  agent any
  tools {
    maven 'mymaven' 
  }
  stages {
    stage ('Build') {
      steps {
        sh 'mvn clean package'
      }
    }
    stage ('Deploy') {
      steps {
        sshagent(['deploy_user']) {
          sh "scp -o StrictHostKeyChecking=no target/*.war ansadmin@50.17.63.230:/home/ansadmin/tomcat/webapps" 
}
      }
    }
  }
}
